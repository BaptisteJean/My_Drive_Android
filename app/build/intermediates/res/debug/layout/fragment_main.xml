<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment"
    android:orientation="vertical"
    android:weightSum="1.0">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:weightSum="1"
        android:background="#ff77beff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="DrivePlayer"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textSize="60dp"
            android:paddingLeft="20dp"
            android:layout_weight="0.54" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.77"
        android:weightSum="1.0"
        android:id="@+id/"
        android:background="#ffffe949">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Email"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:textSize="24dp" />

        <EditText
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"
            android:textSize="0.5dp"
            android:background="#ffa9ffad" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Password"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:textSize="24dp" />

        <EditText
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"
            android:clickable="false"
            android:textSize="0.5dp"
            android:background="#ff93ffd5" />

        <Button
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:text="Connection"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal|top"
            android:layout_weight="0.1"
            android:background="#ff1bffc5"
            android:layout_marginTop="1dp"
            android:textSize="25dp" />

        <Button
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="Quit"
            android:id="@+id/connect"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="0.1"
            android:singleLine="true"
            android:background="#ff29ffcf"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:weightSum="1.0"
        android:background="#ffff8682">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Bienvenu sur DrivePlayer. Application permettant de lire des fichiers audio et video sur son Drive Google"
            android:id="@+id/textView4"
            android:textColor="#ffffffff"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
